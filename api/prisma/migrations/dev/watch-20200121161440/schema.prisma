generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

enum Role {
  USER
  OWNER
  ADMIN
}

model User {
  id               String       @default(cuid()) @id
  username         String       @unique
  passwordSalt     String
  role             Role         @default(USER)
  ownedRestaurants Restaurant[]
  authoredReviews  Review[]
  authoredComments Comment[]
  createdAt        DateTime     @default(now())
}

model Restaurant {
  id          String   @default(cuid()) @id
  name        String
  description String?
  owner       User
  reviews     Review[]
  createdAt   DateTime @default(now())
}

model Review {
  id          String     @default(cuid()) @id
  rating      Int
  restaurant  Restaurant
  author      User
  dateOfVisit DateTime
  comments    Comment[]
}

model Comment {
  id        String   @default(cuid()) @id
  author    User
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}